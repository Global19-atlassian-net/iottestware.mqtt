module MQTT_Broker_TypesAndValues {

// TODO: still required?
import from MQTT_v3_1_1_Types all;
import from IPL4asp_Types all;

type record of NamedHostPort Address_List;

type record NamedHostPort
{
  charstring id,
  charstring hostName,
  integer portNumber
}

type record MqttBrokerContext
{
  integer connId,
  charstring remoteHost,
  integer remotePort,
  charstring localHost,
  integer localPort
}
with { extension "done" }

const MqttBrokerContext c_MqttBrokerContext_empty :=
{
  connId := -1,
  remoteHost := "",
  remotePort := -1,
  localHost := "127.0.0.1",
  localPort := 1885
}
with { extension "done"}

}

module MQTT_Pixits {

    import from MQTT_TypesAndValues all;

    modulepar charstring PX_SUT_HOSTNAME := "127.0.0.1";
    modulepar integer PX_SUT_PORT := 1883;

    modulepar MqttClientCredentials_List PX_CLIENTS;

    modulepar float maxResponseTime := 5.0;

    modulepar integer connect_retries := 3;
    modulepar float retry_delay := 1.0;

    // PICS selection
    type enumerated PICS
    {
      PICS_BROKER_BASIC(0),
      PICS_BROKER_QOS_1(1),
      PICS_BROKER_QOS_2(2),
      PICS_BROKER_LWT(3),
      PICS_BROKER_RTND(4),
      PICS_BROKER_AUTH(5)
    }

    type record of PICS PICS_Selection_Type;
    modulepar PICS_Selection_Type PICS_Selection := {
      PICS_BROKER_BASIC,
      PICS_BROKER_QOS_1,
      PICS_BROKER_QOS_2,
      PICS_BROKER_LWT,
      PICS_BROKER_RTND,
      PICS_BROKER_AUTH
    };
}
